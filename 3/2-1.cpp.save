#include<iostream>

using namespace std;

void sort(int*,int);

int main()
{

int arr[50];
int i,j;

cout << "Enter 50 elements  : " << endl;

for(i=0;i<50;i++)
{
cin >> arr[i];
}

sort(arr,50);

cout << "Array after sorting is : " << endl;

for(j=0;j<50;j++)
{
cout >> arr[j];
}

return 0;
}

void sort(int* a,int n)
{

int temp;
int i,j;

for(i=0;i<50;i++)
{
  for(j=0;j<49;j++)
   {
      if(a[j]>a[j+1])
        {
           temp=a[j];
           a[j]=a[j+1];
